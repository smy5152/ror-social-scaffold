<section class="user-section">
    <h2><%= "Name: #{@user.name}" %></h2>
    <div>
        <span>Pending friend request <%=@user.friend_requests.count %> :</span>
        <%@user.friend_requests.each do |friendship|%>
        <p>
            <%=friendship.name%>
            <%= accept_friendship(friendship)%>
        </p>
        <% end %>
    </div>

    <article class="timeline">
        <h3>Recent posts:</h3>
        <ul class="posts">
            <%= render @posts %>
        </ul>
    </article>
</section>